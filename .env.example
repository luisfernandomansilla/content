# Content Creator - Environment Configuration Example
# Copy this file to .env and modify the values as needed

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENVIRONMENT=development
# Options: development, production

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Development defaults
HOST=127.0.0.1
PORT=7860

# Production settings (uncomment for production)
# HOST=0.0.0.0  
# PORT=80

# ==============================================
# API TOKENS
# ==============================================
# Hugging Face Token (required for some models)
HF_TOKEN=your_huggingface_token_here

# Civitai API Token (optional, for Civitai models)
CIVITAI_API_TOKEN=your_civitai_token_here

# ==============================================
# MODEL CONFIGURATION
# ==============================================
# Default models
DEFAULT_IMAGE_MODEL=Stable Diffusion XL
DEFAULT_VIDEO_MODEL=AnimateDiff

# Quality and resolution defaults
DEFAULT_QUALITY=Balanced
DEFAULT_RESOLUTION=720p

# ==============================================
# DIRECTORIES
# ==============================================
OUTPUT_DIR=outputs
TEMP_DIR=temp
CACHE_DIR=models

# ==============================================
# PERFORMANCE SETTINGS
# ==============================================
MAX_CONCURRENT_GENERATIONS=1
CLEANUP_TEMP_FILES=true
AUTO_OPTIMIZE_SETTINGS=true

# ==============================================
# UI CONFIGURATION
# ==============================================
GRADIO_THEME=soft
GRADIO_SHARE=false

# ==============================================
# LOGGING & DEBUG
# ==============================================
LOG_LEVEL=INFO
DEBUG=false

# ==============================================
# PRODUCTION DEPLOYMENT EXAMPLE
# ==============================================
# For production deployment, use these settings:
#
# ENVIRONMENT=production
# HOST=0.0.0.0
# PORT=80
# DEBUG=false
# GRADIO_SHARE=false
# CLEANUP_TEMP_FILES=true
# HF_TOKEN=your_real_token_here
